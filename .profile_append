#### ここから https://github.com/hrko/home/.profile_append ####

# Rust のパッケージマネージャの環境変数をロード
if [ -f "$HOME/.cargo/env" ]; then
  . "$HOME/.cargo/env"
fi

# Go の実行ファイル置き場を PATH に追加
if [ -d "$HOME/.local/go/bin" ] ; then
    PATH="$HOME/.local/go/bin:$PATH"
fi
if [ -d "$HOME/go/bin" ] ; then
    PATH="$HOME/go/bin:$PATH"
fi

# Fast Node Manager (fnm) の実行ファイル置き場を PATH に追加
if [ -d "$HOME/.local/share/fnm" ] ; then
    PATH="$HOME/.local/share/fnm:$PATH"
fi

# less コマンドのデフォルトオプション
export LESS='--mouse --wheel-lines=3 --ignore-case --LONG-PROMPT --RAW-CONTROL-CHARS --chop-long-lines'

#### ここまで https://github.com/hrko/home/.profile_append ####
